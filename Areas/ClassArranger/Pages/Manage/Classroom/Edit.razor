@page "/ClassArranger/Manage/ClassRoom/Edit/{id:int}"

@using TeachingSystem.Areas.ClassArranger.Shared
<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell"></div>
        <div class="mat-layout-grid-cell">
            <h1>编辑教室信息</h1>
            <ClassroomInfo id="@Id" OnSave="OnSave"></ClassroomInfo>
        </div>
        <div class="mat-layout-grid-cell"></div>
        
    </div>
</div>
 

@code {
    [Parameter]
    public int Id{get;set;}
    void OnSave() {
        NavigationManager.NavigateTo("/ClassArranger/Manage/ClassRoom");
    }
}