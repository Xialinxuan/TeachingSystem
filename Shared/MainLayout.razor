@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime;

<style>
    .app-fab--absolute {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
    }
</style>
<MatAppBarContainer  style="width: 100%; height: 100%;">
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu"></MatIconButton>
                <MatAppBarTitle>教学管理系统</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <LoginDisplay />
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
 
    <MatAppBarContent>
        <div style="padding-left: 25px; padding-right: 25px;">
            @Body
        </div>
    </MatAppBarContent>
</MatAppBarContainer>
<MatFAB Class="app-fab--absolute" Icon="@MatIconNames.Arrow_back" Label="返回" OnClick="@(_ => GoBack())"></MatFAB>


@code {
async Task GoBack() {
    await JSRuntime.InvokeVoidAsync("history.back");
}
}